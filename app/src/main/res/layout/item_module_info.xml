<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.cardview.CircularRevealCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:elevation="2dp"
    app:cardCornerRadius="4dp"
    app:cardMaxElevation="4dp">

    <com.google.android.material.circularreveal.CircularRevealLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:paddingHorizontal="8dp">

        <com.google.android.material.circularreveal.CircularRevealLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_module_name"
                style="@style/HeaderTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="0.85"
                android:textStyle="bold"
                tools:text="Module Name" />

            <ImageView
                android:id="@+id/item_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.15"
                android:contentDescription="@string/button_edit_listed_module"
                android:gravity="end"
                android:padding="8dp"
                android:src="@drawable/ic_edit" />
        </com.google.android.material.circularreveal.CircularRevealLinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_room"
            style="@style/HeaderTextStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            tools:text="Room Name" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_participants"
            style="@style/HeaderTextStyle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Group X / Teacher Y" />
    </com.google.android.material.circularreveal.CircularRevealLinearLayout>

</com.google.android.material.circularreveal.cardview.CircularRevealCardView>