<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mytimetable">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_timetable"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_timetable_round"
        android:supportsRtl="true">

        <activity
            android:name=".splashscreen.SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppThemeActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".login.RegisterActivity"
            android:launchMode="singleInstance"
            android:theme="@style/AppThemeActionBar"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize" />
        <activity
            android:name=".teacher_main.TeacherMainActivity"
            android:theme="@style/Theme.MyTimetable.NoActionBar" />
        <activity
            android:name=".student_main.StudentMainActivity"
            android:theme="@style/Theme.MyTimetable.NoActionBar" />
        <activity
            android:name=".module.ListModuleActivity"
            android:theme="@style/ActionBarCustomTheme" />
        <activity
            android:name=".module.ModuleMeetingEditActivity"
            android:theme="@style/ActionBarCustomTheme" />
        <activity
            android:name=".theme.DarkModeActivity"
            android:theme="@style/ActionBarCustomTheme" />

    </application>

</manifest>